<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane styleClass="ahmed-root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elmat3am.Controller">
   <center>
      <AnchorPane maxHeight="540.0" maxWidth="740.0" minHeight="540.0" minWidth="740.0" prefHeight="540.0" prefWidth="740.0">
          <children>
            <HBox layoutX="257.0" layoutY="404.0" spacing="25.0">
               <children>
                    <Button fx:id="Sc1_Login" mnemonicParsing="false" onAction="#Sc1_Login" prefHeight="26.0" prefWidth="55.0" styleClass="ahmed-button" stylesheets="@styles.css" text="Login" />
                    <Button fx:id="Sc1_Signup" mnemonicParsing="false" onAction="#switchToSignUp" prefHeight="26.0" prefWidth="55.0" styleClass="ahmed-button" stylesheets="@styles.css" text="Go to Signup" />
               </children>
            </HBox>
              <TextField fx:id="Sc1_Email" layoutX="271.0" layoutY="306.0" prefHeight="26.0" prefWidth="198.0" promptText="Enter Email" styleClass="ahmed-text-field" stylesheets="@styles.css">
               <padding>
                  <Insets top="10.0" />
               </padding></TextField>
              <ImageView fitHeight="261.0" fitWidth="374.0" layoutX="240.0" layoutY="26.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@images/profile.png" />
                  </image>
              </ImageView>
            <PasswordField fx:id="Sc1_Password" layoutX="270.0" layoutY="350.0" prefHeight="26.0" prefWidth="198.0" promptText="Enter Password" styleClass="ahmed-text-field" stylesheets="@styles.css" />
          </children>
      </AnchorPane>
   </center>
</BorderPane>
